.lari-
  &a, &normal
    &:before
      content 'a'   // normal
  &b, &bold
    &:before
      content 'b'   // bold
  &c, &bolder
    &:before
      content 'c'   // bolder
  &d, &narrow-sans
    &:before
      content 'd'   // narrow-sans
  &e, &narrow-serif
    &:before
      content 'e'   // narroow-serif
  &f, &thin-sans
    &:before
      content 'f'   // thin-sans
  &g, &thin-serif
    &:before
      content 'g'   // thin-serif
  &h, &serif
    &:before
      content 'h'   // serif
  &i, &sans
    &:before
      content 'i'   // sans
  &j, &narrow-sans-bold
    &:before
      content 'j'   // narrow-sans-bold
  &k, &narrow-sans-thin
    &:before
      content 'k'   // narrow-sans-thin
  &l, &comic, &wtf
    &:before
      content 'l'   // comic, wtf